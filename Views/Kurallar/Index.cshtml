@model IEnumerable<dafsem.Models.Kurallar>

@{
    ViewData["Title"] = "Kural Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Kurallar</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-file-earmark-plus"></i> Yeni Kural Ekle
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Metin)</th>
            <th>@Html.DisplayNameFor(model => model.Turu.Tur)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Metin)</td>
                <td>@Html.DisplayFor(modelItem => item.Turu.Tur)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square me-1"></i> Düzenle
                        </a>
                        <a class="btn btn-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-card-text me-1"></i> Detaylar
                        </a>
                        <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3 me-1"></i> Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>