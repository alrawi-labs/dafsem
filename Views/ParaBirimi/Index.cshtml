@model IEnumerable<dafsem.Models.ParaBirimi>

@{
    ViewData["Title"] = "Para Birimi Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Para Birimleri</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-currency-exchange"></i> Yeni Birim Ekle
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Kod)</th>
            <th>@Html.DisplayNameFor(model => model.Ad)</th>
            <th>@Html.DisplayNameFor(model => model.Sembol)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold font-monospace">@Html.DisplayFor(modelItem => item.Kod)</td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td class="fs-5">@Html.DisplayFor(modelItem => item.Sembol)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square me-1"></i> Düzenle
                        </a>
                        <a class="btn btn-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle me-1"></i> Detaylar
                        </a>
                        <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3 me-1"></i> Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-3">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Kayıtlı para birimi bulunamadı.
    </div>
}