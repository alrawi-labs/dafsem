@model dafsem.Models.Ucretler

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Ücret Bilgilerini Güncelle</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                
                <!-- Başlık -->
                <div class="mb-3">
                    <label asp-for="Baslik" class="form-label fw-bold"></label>
                    <input asp-for="Baslik" class="form-control" placeholder="Ücret Başlığını Giriniz" />
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>
                
                <!-- Ücret ve Birim -->
                <div class="mb-3">
                    <label asp-for="Ucret" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Ucret" class="form-control" placeholder="Ücret Giriniz" />
                        <select asp-for="Birim" class="form-select">
                            @foreach (var item in ViewBag.Birimler)
                            {
                                <option value="@item.Value" selected="@(Model.Birim?.Id.ToString() == item.Value ? "selected" : null)">
                                    @item.Text
                                </option>
                            }

                        </select>
                    </div>
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                    <span asp-validation-for="Birim" class="text-danger"></span>
                </div>
                
                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Bilgileri Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}