@model UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<style>
    .form-floating > label {
        padding-left: 1.25rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .card {
        border-radius: 1rem;
    }

    .card-header {
        border-radius: 1rem 1rem 0 0 !important;
    }

    .btn-lg {
        border-radius: 0.5rem;
    }

    .form-floating > .form-control:not(:placeholder-shown) ~ label::after{
        background-color: #E9ECEF;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white p-4">
                    <h4 class="mb-2 fw-bold">
                        <i class="bi bi-person-x-fill me-2"></i>Kullanıcı Sil
                    </h4>
                    <p class="mb-0 small opacity-75">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Bu işlem geri alınamaz!
                    </p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Delete" asp-controller="Adminler" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" readonly placeholder="Kullanıcı Adı" />
                            <label asp-for="Name">
                                <i class="bi bi-person me-1"></i>Kullanıcı Adı
                            </label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" readonly placeholder="E-Posta" />
                            <label asp-for="Email" >
                                <i class="bi bi-envelope me-1"></i>E-Posta
                            </label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Roles" class="form-control" readonly placeholder="Yetki" />
                            <label asp-for="Roles">
                                <i class="bi bi-shield-lock me-1"></i>Yetki
                            </label>
                        </div>

                        <div class="alert alert-warning text-center small">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                            Kullanıcıyı silmek istediğinizden emin misiniz?
                        </div>

                        <div class="d-flex gap-2 flex-column flex-md-row">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Geri
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg flex-grow-1">
                                <i class="bi bi-trash-fill me-2"></i>Kullanıcıyı Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-4 text-muted small">
                <i class="bi bi-question-circle me-1"></i>
                Sorun mu yaşıyorsunuz? <a href="#" class="text-decoration-none">Yardım alın</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap 5 tooltip'leri etkinleştirme
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
