@model IEnumerable<dafsem.Models.ViewModels.UserViewModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Engellenmiş Hesaplar</h2>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning d-flex align-items-center">
        <i class="bi bi-info-circle me-2"></i>
        Engellenmiş hesap bulunmamaktadır.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Ad</th>
                    <th>E-posta</th>
                    <th>Yetkiler</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles.Split(','))
                            {
                                <span class="badge bg-secondary me-1">@role.Trim()</span>
                            }
                        </td>
                        <td class="text-center">
                            <form asp-action="EngellenenHesaplar" asp-controller="Adminler" method="post" class="d-inline">
                                <input type="hidden" name="Id" value="@user.Id" />
                                <button type="submit" class="btn btn-success btn-sm d-flex align-items-center">
                                    <i class="bi bi-unlock me-1"></i> Engeli Kaldır
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}