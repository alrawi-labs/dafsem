@using dafsem.Models.ViewModels.Login;
@model AdminAddNewUserViewModel;

<style>
    .form-floating > label {
        padding-left: 1.25rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }

    .card {
        border-radius: 1rem;
    }

    .card-header {
        border-radius: 1rem 1rem 0 0 !important;
    }

    .btn-lg {
        border-radius: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-8">
            <!-- Main Card -->
            <div class="card border-0 shadow-lg">
                <!-- Card Header -->
                <div class="card-header bg-primary text-white p-4">
                    <h4 class="mb-2 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>Yeni Admin Ekle
                    </h4>
                    <p class="mb-0 small opacity-75">
                        <i class="bi bi-info-circle me-2"></i>
                        Eklenen kullanıcı, aktif hale gelmesi için Root yetkilisinin onayına gönderilecektir.
                    </p>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <form asp-action="AddNewUser" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>
                        <input type="hidden" asp-for="Id" value="0" />

                        <!-- Name Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Ad Soyad" />
                            <label asp-for="Name">
                                <i class="bi bi-person me-1"></i>Ad Soyad
                            </label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">
                                <i class="bi bi-envelope me-1"></i>Email
                            </label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                            <label asp-for="Password">
                                <i class="bi bi-lock me-1"></i>Şifre
                            </label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifreyi Onayla" />
                            <label asp-for="ConfirmPassword">
                                <i class="bi bi-lock-fill me-1"></i>Şifreyi Onayla
                            </label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 flex-column flex-md-row">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Geri
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-send-check me-2"></i>
                                Root Yetkilisine Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Text -->
            <div class="text-center mt-4 text-muted small">
                <i class="bi bi-question-circle me-1"></i>
                Sorun mu yaşıyorsunuz? <a href="#" class="text-decoration-none">Yardım alın</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}