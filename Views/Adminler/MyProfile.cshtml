@model UserViewModel
@{
    ViewData["Title"] = $"Profil - {Model.Name}";
}

<style>
    /* Custom styles to complement Bootstrap */
    .profile-header {
        background: linear-gradient(to right, #0d6efd, #0950c3);
        position: relative;
        overflow: hidden;
    }

        .profile-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M60 0L0 0 0 60' fill='none' stroke='%23ffffff' stroke-width='0.5' stroke-opacity='0.1'/%3E%3C/svg%3E");
            opacity: 0.1;
        }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background-color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .info-icon {
        width: 1.25rem;
        height: 1.25rem;
        opacity: 0.7;
    }

    .role-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
    }

    .edit-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2) !important;
    }
</style>

<div class="min-vh-100 bg-light py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Profile Card -->
                <div class="card border-0 shadow-lg">
                    <!-- Header Section -->
                    <div class="profile-header text-center text-white p-5">
                        <!-- Avatar -->
                        <div class="d-flex justify-content-center mb-3">
                            <div class="avatar-circle">
                                @Model.Name.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                        <!-- Name and Role -->
                        <h1 class="display-6 fw-bold mb-2">@Model.Name</h1>
                        <span class="badge role-badge px-3 py-2">@Model.Roles</span>
                    </div>

                    <!-- Profile Information -->
                    <div class="card-body p-4 p-lg-5">
                        <!-- Email Section -->
                        <div class="mb-4">
                            <label class="form-label text-muted small fw-semibold">E-posta Adresi</label>
                            <div class="bg-light rounded p-3 d-flex align-items-center">
                                <svg class="info-icon me-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <span class="text-body">@Model.Email</span>
                            </div>
                        </div>

                        <!-- Role Section -->
                        <div class="mb-4">
                            <label class="form-label text-muted small fw-semibold">Roller</label>
                            <div class="bg-light rounded p-3 d-flex align-items-center">
                                <svg class="info-icon me-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <span class="text-body">@Model.Roles</span>
                            </div>
                        </div>

                        <!-- Edit Button -->
                        <div class="text-center mt-5">
                            <a asp-action="UpdateProfile" asp-controller="Adminler" asp-route-id="@Model.Id"
                               class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow edit-button transition-all">
                                <svg class="me-2" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Profili Düzenle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>