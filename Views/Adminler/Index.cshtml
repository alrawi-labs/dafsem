@model IEnumerable<dafsem.Models.ViewModels.UserViewModel>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService Authorize
@{
    AuthorizationResult authorizationResult = await Authorize.AuthorizeAsync(User, "RootRole");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Admin Yönetimi</h2>
    @if (authorizationResult.Succeeded)
    {
        <a asp-action="AddNewUserByRoot" asp-controller="Adminler" class="btn btn-outline-primary d-flex align-items-center">
            <i class="bi bi-person-plus me-2"></i> Yeni Admin Ekle
        </a>
    }
    else
    {
        <a asp-action="AddNewUser" asp-controller="Adminler" class="btn btn-outline-primary d-flex align-items-center">
            <i class="bi bi-person-plus me-2"></i> Yeni Admin Ekle
        </a>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Ad</th>
                <th>E-posta</th>
                <th>Yetkiler</th>
                @if (authorizationResult.Succeeded)
                {
                    <th class="text-center">İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        @foreach (var role in user.Roles.Split(','))
                        {
                            <span class="badge bg-info me-1">@role.Trim()</span>
                        }
                    </td>
                    @if (authorizationResult.Succeeded)
                    {
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-controller="Adminler"
                                   class="btn btn-warning btn-sm d-flex align-items-center"
                                   asp-route-id="@(user?.Id ?? "")">
                                    <i class="bi bi-pencil-square me-1"></i> Güncelle
                                </a>
                                <a asp-action="Delete" asp-controller="Adminler"
                                   class="btn btn-danger btn-sm d-flex align-items-center"
                                   asp-route-id="@(user?.Id ?? "")">
                                    <i class="bi bi-trash3 me-1"></i> Sil
                                </a>
                                <a asp-action="LockUser" asp-controller="Adminler"
                                   class="btn btn-secondary btn-sm d-flex align-items-center"
                                   asp-route-id="@(user?.Id ?? "")">
                                    <i class="bi bi-lock me-1"></i> Kilitle
                                </a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>