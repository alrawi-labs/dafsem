@model UpdateProfileViewModel
@{
    ViewData["Title"] = $"Profil Düzenleme - {Model.Name}";
}

<style>
    .profile-header {
        background: linear-gradient(to right, #0d6efd, #0950c3);
        position: relative;
        overflow: hidden;
    }

        .profile-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M60 0L0 0 0 60' fill='none' stroke='%23ffffff' stroke-width='0.5' stroke-opacity='0.1'/%3E%3C/svg%3E");
            opacity: 0.1;
        }

    .avatar-upload {
        position: relative;
        max-width: 200px;
        margin: 0 auto;
    }

    .avatar-edit {
        position: absolute;
        right: 0;
        bottom: 0;
        width: 40px;
        height: 40px;
        background: #0d6efd;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
    }

    .avatar-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #0d6efd;
        border: 3px solid #0d6efd;
    }

    .form-floating > label {
        color: #6c757d;
    }
</style>

<div class="min-vh-100 bg-light py-5">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    <div class="card border-0 shadow-lg">
                        <input type="hidden" asp-for="Id"  />
                        <div class="profile-header text-center text-white p-5">
                            <!-- Avatar Upload -->
                            <div class="avatar-upload justify-content-center d-flex">
                                <div class="avatar-preview">
                                    @Model.Name.Substring(0, 1).ToUpper()
                                </div>
                            </div>

                            <h1 class="display-6 fw-bold mb-2">@Model.Name</h1>
                            @if (Model.Roles != null)
                            {
                                <span class="badge bg-primary me-1">@Model.Roles</span>
                            }
                        </div>
                        <div class="card-body p-4 p-lg-5">
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" placeholder="Ad Soyad" />
                                <label asp-for="Name"><i class="bi bi-person me-2"></i>Ad Soyad</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="E-posta" />
                                <label asp-for="Email"><i class="bi bi-envelope me-2"></i>E-posta Adresi</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="card border-light mb-3">
                                <div class="card-header bg-transparent border-0 pb-0">
                                    <h5 class="card-title text-muted"><i class="bi bi-lock me-2"></i>Şifre Değiştirme</h5>
                                </div>
                                <div class="card-body">
                                    <div class="form-floating mb-3">
                                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Mevcut Şifre" />
                                        <label asp-for="CurrentPassword"><i class="bi bi-key me-2"></i>Mevcut Şifre</label>
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni Şifre" />
                                        <label asp-for="NewPassword"><i class="bi bi-shield-lock me-2"></i>Yeni Şifre</label>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating">
                                        <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Yeni Şifreyi Onayla" />
                                        <label asp-for="ConfirmNewPassword"><i class="bi bi-shield-check me-2"></i>Yeni Şifreyi Onayla</label>
                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-3 justify-content-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill">
                                    <i class="bi bi-save me-2"></i>Değişiklikleri Kaydet
                                </button>
                                <a asp-action="MyProfile" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                    <i class="bi bi-x-lg me-2"></i>İptal
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

