@model dafsem.Models.OdaTipleri

@{
    ViewData["Title"] = "Oda Tipi Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Oda Tipi Güncelle</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Oda Tipi -->
                <div class="my-3">
                    <label asp-for="OdaTipi" class="form-label fw-bold"></label>
                    <input asp-for="OdaTipi" class="form-control" placeholder="Oda tipini giriniz" />
                    <span asp-validation-for="OdaTipi" class="text-danger"></span>
                </div>

                <!-- Ücret ve Birim Input -->
                <div class="mb-3">
                    <label asp-for="Ucret" class="form-label fw-bold">Ücret ve Birim</label>
                    <div class="input-group">
                        <input asp-for="Ucret" class="form-control" placeholder="Ücret giriniz..." />
                        <select asp-for="Birim" asp-items="ViewBag.Birimler" class="form-select">
                            <option value="">Birim seçiniz...</option>
                            @foreach (var item in ViewBag.Birimler)
                            {
                                <option value="@item.Value" selected="@(Model.Birim?.Id.ToString() == item.Value ? "selected" : null)">
                                    @item.Text
                                </option>
                            }

                        </select>
                    </div>
                    <span asp-validation-for="Ucret" class="text-danger small"></span>
                    <span asp-validation-for="Birim" class="text-danger small"></span>
                </div>

                <!-- Konaklama Evi Dropdown -->
                <div class="mb-3">
                    <label asp-for="KonaklamaEvi" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <select asp-for="KonaklamaEvi" asp-items="ViewBag.KonaklamaEvleri" class="form-select">
                            <option value="">Konaklama Evi Seçiniz...</option>
                            @foreach (var item in ViewBag.KonaklamaEvleri)
                            {
                                <option value="@item.Value" selected="@(Model.KonaklamaEvi?.Id.ToString() == item.Value ? "selected" : null)">
                                    @item.Text
                                </option>
                            }

                        </select>
                    </div>
                    <span asp-validation-for="KonaklamaEvi" class="text-danger small"></span>
                </div>

                <!-- Güncelle Butonu -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
