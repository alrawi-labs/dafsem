@model IEnumerable<dafsem.Models.KurulUyeleri>


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Kurul Üyeleri</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Unvan.UnvanAdi)</th>
            <th>@Html.DisplayNameFor(model => model.Adi)</th>
            <th>@Html.DisplayNameFor(model => model.Soyadi)</th>
            <th>@Html.DisplayNameFor(model => model.Kurum)</th>
            <th>@Html.DisplayNameFor(model => model.KategoriId)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Unvan.UnvanAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Adi)</td>
                <td>@Html.DisplayFor(modelItem => item.Soyadi)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurum)</td>
                <td>@Html.DisplayFor(modelItem => item.KategoriId.Baslik)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil me-1"></i> Güncelle
                        </a>
                        <a class="btn btn-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle me-1"></i> Detaylar
                        </a>
                        <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash me-1"></i> Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



