@model IEnumerable<dafsem.Models.Dil>

@{
    ViewData["Title"] = "Dil Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Diller</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Yeni Dil Ekle
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.DilAdi)</th>
            <th>@Html.DisplayNameFor(model => model.DilKodu)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        <!-- Türkçe (TR) dilini varsayılan olarak ekle -->
        <tr>
            <td>Türkçe</td>
            <td>TR</td>
            <td class="text-center text-muted">Varsayılan</td>
        </tr>

        @foreach (var item in Model)
        {
            if (item.DilKodu != "TR") // Türkçe'yi tekrar eklememek için
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DilAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.DilKodu)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
