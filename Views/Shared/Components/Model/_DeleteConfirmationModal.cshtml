@model dafsem.Models.ViewModels.ModalViewModel
@{
    string buttonLabel = Model.ButtonLabel ?? "Sil";
    string buttonIcon = Model.ButtonIcon ?? "bi bi-trash";
}
<!-- Modal -->
<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby=$"{@Model.ModalId}Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="{@Model.ModalId}Label">@Model.Title</h5>
                <button type="button" onclick="SliderHide('@Model.ModalId')" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body text-center">
                @Html.Raw(Model.Body)
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" onclick="SliderHide('@Model.ModalId')" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Vazgeç
                </button>
                <button type="button" class="btn btn-danger" id="@Model.ConfirmButtonId">
                    <i class="@buttonIcon"></i> @buttonLabel
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function SliderHide(modalId) {
        $('#' + modalId).removeClass('show');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();

    }
</script>