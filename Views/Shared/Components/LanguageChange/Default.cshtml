@model List<SelectListItem>

<form method="post" asp-controller="Dil" asp-action="ChangeLanguage">
    <select name="selectedLanguage" class="form-control" onchange="this.form.submit()">
        @foreach (var item in Model)
        {
            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
        }
    </select>
</form>
