<!DOCTYPE html>
<html lang="en">
@{
    int dilId = 0; // Varsayılan değer

    if (ViewData["dilId"] is int dilKoduInt)
    {
        dilId = dilKoduInt;
    }
    else if (ViewData["dilId"] is string dilKoduStr && int.TryParse(dilKoduStr, out int parsedValue))
    {
        dilId = parsedValue;
    }
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - @AyarService.GetSiteAdi(dilId)</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="@AyarService.GetSiteLogo(dilId)" rel="icon">
    <link href="@AyarService.GetSiteLogo(dilId)" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/User/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/User/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/User/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/User/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/User/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/User/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/User/css/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/Site.css" rel="stylesheet">
    <style>
        .watermark {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 450px; /* Filigran genişliği */
            height: 450px;
            background-image: url('@AyarService.GetFiligran(dilId)'); /* Filigran görseli */
            background-repeat: no-repeat;
            background-size: contain;
            opacity: 0.1; /* Şeffaflık */
            z-index: -10; /* Diğer her şey üstte olacak */
            pointer-events: none; /* Tıklanamaz olacak */
        }

    </style>
</head>

<body>


    <!-- ======= Header ======= -->

    @* <partial name="UserSite/Header" ></partial> *@
    @await Component.InvokeAsync("Header", new { dilId = dilId })

    <!-- End Header -->

    <!-- ======= Hero Section ======= -->
    @await Component.InvokeAsync("Hero", new { dilId = dilId })
    
    <!-- End Hero -->

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <div class="watermark"></div>

    <!-- ======= Footer ======= -->
    @await Component.InvokeAsync("Footer", new { dilId = dilId })
    <!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <!-- Vendor JS Files -->
    <script src="~/User/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/User/vendor/aos/aos.js"></script>
    <script src="~/User/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/User/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/User/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/User/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/User/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/User/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/User/js/main.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        let flashing = true;

        $(document).ready(function () {
            $(".flashing").click(function () {
                $(this).toggleClass("flash-off");
                flashing = !flashing;
            });
        });
    </script>

</body>

</html>