@model IEnumerable<dafsem.Models.Konaklama>

@{
    ViewData["Title"] = "Konaklama Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Konaklama Kayıtları</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-building-add"></i> Yeni Konaklama Ekle
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.KonaklamaEvi)</th>
                <th>@Html.DisplayNameFor(model => model.Adres)</th>
                <th>@Html.DisplayNameFor(model => model.Tel)</th>
                <th>@Html.DisplayNameFor(model => model.Eposta)</th>
                <th>@Html.DisplayNameFor(model => model.WebSitesi)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.YildizSayisi)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.KahvaltiDahilMi)</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-truncate" style="max-width: 200px;" title="@item.KonaklamaEvi">
                        @Html.DisplayFor(modelItem => item.KonaklamaEvi)
                    </td>
                    <td class="text-truncate" style="max-width: 250px;" title="@item.Adres">
                        @Html.DisplayFor(modelItem => item.Adres)
                    </td>
                    <td>
                        <a href="tel:@item.Tel" class="text-decoration-none">
                            <i class="bi bi-telephone me-1"></i>@item.Tel
                        </a>
                    </td>
                    <td>
                        <a href="mailto:@item.Eposta" class="text-decoration-none">
                            <i class="bi bi-envelope me-1"></i>@item.Eposta
                        </a>
                    </td>
                    <td>
                        <a href="//@item.WebSitesi" target="_blank" class="text-decoration-none">
                            <i class="bi bi-globe me-1"></i>Web Sitesi
                        </a>
                    </td>
                    <td class="text-center">
                        <div class="text-warning">
                            @for (int i = 0; i < item.YildizSayisi; i++)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                        </div>
                    </td>
                    <td class="text-center">
                        @if (item.KahvaltiDahilMi == true)
                        {
                            <i class="bi bi-check-circle-fill text-success fs-5"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-warning btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square me-1"></i> Düzenle
                            </a>
                            <a class="btn btn-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-info-circle me-1"></i> Detaylar
                            </a>
                            <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash3 me-1"></i> Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>