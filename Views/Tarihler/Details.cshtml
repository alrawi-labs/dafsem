@model dafsem.Models.Tarihler

@{
    ViewData["Title"] = "Tarihler Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Tarih Detayları</h3>
        </div>
        <div class="card-body">

            <div class="table-responsive mt-4">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Tarih)</th>
                            <td>@Model.Tarih.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR")).ToUpper()</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Aciklama)</th>
                            <td>@Html.DisplayFor(model => model.Aciklama)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
                    <i class="bi bi-pencil-square"></i> Güncelle
                </a>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
