@model dafsem.Models.Tarihler

@{
    ViewData["Title"] = "Tarihler Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Tarihi Güncelle</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Tarih -->
                <div class="my-3">
                    <label asp-for="Tarih" class="form-label fw-bold"></label>
                    <input type="date" asp-for="Tarih" class="form-control" placeholder="Tarihi Seçiniz" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>

                <!-- Açıklama -->
                <div class="my-3">
                    <label asp-for="Aciklama" class="form-label fw-bold"></label>
                    <input asp-for="Aciklama" class="form-control" placeholder="Açıklama Giriniz" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Tarihi Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
