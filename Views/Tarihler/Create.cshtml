@model dafsem.Models.Tarihler

@{
    ViewData["Title"] = "Yeni Tarih Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Yeni Tarih Ekle</h3>
            <a onclick="window.history.back()" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Tarih Alanı -->
                <div class="my-3">
                    <label asp-for="Tarih" class="form-label fw-bold"></label>
                    <input type="date" asp-for="Tarih" class="form-control" placeholder="Tarih Giriniz (Örn: 1 KASIM 2024)" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>

                <!-- Açıklama Alanı -->
                <div class="my-3">
                    <label asp-for="Aciklama" class="form-label fw-bold"></label>
                    <input asp-for="Aciklama" class="form-control" placeholder="Açıklama Giriniz" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
