@model IEnumerable<dafsem.Models.KurulKategorileri>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary">Kurul Kategorileri</h2>
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i> Yeni Kategori Ekle
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Baslik)</th>
            <th>@Html.DisplayNameFor(model => model.Sira)</th>
            <th>@Html.DisplayNameFor(model => model.Sayfa)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                <td>@Html.DisplayFor(modelItem => item.Sira)</td>
                <td>@Html.DisplayFor(modelItem => item.Sayfa.AltSayfaBaslik)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a class="btn btn-warning btn-sm d-flex align-items-center" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil me-1"></i> Güncelle
                        </a>
                        <a class="btn btn-info btn-sm d-flex align-items-center" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle me-1"></i> Detaylar
                        </a>
                        <a class="btn btn-danger btn-sm d-flex align-items-center" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash me-1"></i> Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
