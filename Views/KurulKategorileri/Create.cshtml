@model dafsem.Models.KurulKategorileri

@{
    ViewData["Title"] = "Kurul Kategorisi Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Kurul Kategorisi Oluştur</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Kategori Başlığı -->
                <div class="my-3">
                    <label asp-for="Baslik" class="form-label fw-bold"></label>
                    <input asp-for="Baslik" class="form-control" placeholder="Kategori Başlığını Giriniz" />
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>

                <!-- Görüntüleme Sırası -->
                <div class="form-group">
                    <label asp-for="Sira" class="control-label"></label>
                    <select asp-for="Sira" class="form-control" asp-items="ViewBag.SiraList"></select>
                    <span asp-validation-for="Sira" class="text-danger"></span>
                </div>

                <!-- Bulunduğu Sayfa -->
                <div class="form-group">
                    <label asp-for="SayfaId" class="control-label"></label>
                    <select asp-for="SayfaId" class="form-control" asp-items="ViewBag.AltSayfaList"></select>
                    <span asp-validation-for="SayfaId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Kategoriyi Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
